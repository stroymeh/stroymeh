<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h3>Сброс пароля</h3>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <fieldset>
        <%= f.input :password, :label => false, :placeholder => 'Пароль', :autofocus => true %>
        <%= f.input :password_confirmation, :label => false, :placeholder => 'Пароль еще раз' %>

        <%= f.submit 'Изменить пароль', :class => 'btn btn-primary btn-block' %>
      </fieldset>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
