<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h3>Вход</h3>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <fieldset>
        <%= f.input :email, :label => false, :placeholder => 'Адрес электронной почты', :autofocus => true %>
        <%= f.input :password, :label => false, :placeholder => 'Пароль' %>

        <%= f.submit 'Войти', :class => 'btn btn-primary btn-block' %>
      </fieldset>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
