<div role="tabpanel">
  <%= link_to 'Добавить раздел', new_manage_section_path, :class => 'btn btn-primary btn-sm pull-right' %>

  <% @sections.each do |section| %>
    <div class="btn-group js-nav-tabs">
      <%= link_to section, "##{section.slug}", :data => { :toggle => :tab  }, :role => :tab, :class => 'btn btn-default' %>
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        <span class="caret"></span>
        <span class="sr-only">Toggle Dropdown</span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li>
          <%= link_to 'Изменить', edit_manage_section_path(section) %>
        </li>
      </ul>
    </div>
  <% end %>

  <div class="tab-content">
    <% @sections.each do |section| %>
      <div role="tabpanel" class="tab-pane" id="<%= section.slug %>">
        <ul class="list-group pages">
          <% if section.pages.any? %>
            <%= render section.pages.roots %>
          <% else %>
            <li class="list-group-item">В этот раздел еще не добавляли страниц</li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= link_to 'Добавить страницу', new_manage_page_path, :class => 'btn btn-primary btn-sm' %>
  </div>
</div>
