<%= simple_form_for(@section, :url => [:manage, @section]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description, input_html: { class: 'js-textarea-autosize' } %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Сохранить', :class => 'btn btn-primary btn-sm' %>
    <%= link_to 'Отмена', manage_root_path, :class => 'btn btn-default btn-sm' %>
  </div>
<% end %>
