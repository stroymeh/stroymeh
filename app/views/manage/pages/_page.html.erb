<% if page.has_children? %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <%= link_to page.title, manage_page_path(page) %>

      <div class="pull-right actions">
        <%= link_to 'Изменить', edit_manage_page_path(page) %>
        <%= link_to 'Удалить', manage_page_path(page), :method => :delete, :data => { :confirm => t('confirm.destroy') } %>
      </div>
    </div>

    <div class="panel-body">
      <ul class="list-group">
        <% page.children.each do |page| %>
          <li class="list-group-item">
            <%= link_to page.title, manage_page_path(page) %>

            <div class="pull-right actions">
              <%= link_to 'Изменить', edit_manage_page_path(page) %>
              <%= link_to 'Удалить', manage_page_path(page), :method => :delete, :data => { :confirm => t('confirm.destroy') } %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% else %>
  <li class="list-group-item <%= cycle("odd", "even") %>" id="page_<%= page.id %>">
    <%= link_to page.title, manage_page_path(page) %>

    <div class="pull-right actions">
      <%= link_to 'Изменить', edit_manage_page_path(page) %>
      <%= link_to 'Удалить', manage_page_path(page), :method => :delete, :data => { :confirm => t('confirm.destroy') } %>
    </div>
  </li>
<% end %>
