<%= simple_form_for(@page, :url => [:manage, @page]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :section_id, :as => :select, :collection => Section.all, :input_html => { :class => 'js-select' } %>
    <%= f.input :parent_id, :as => :select, :collection => Page.all, :input_html => { :class => 'js-select' } %>
    <%= f.input :title %>
    <%= f.input :content, :input_html => { :class => 'editor' } %>
    <%= f.input :typeform, :input_html => { :class => 'editor' } %>
    <%= f.input :tag_list, :as => :select, :collection => ActsAsTaggableOn::Tag.pluck(:name), :input_html => { :class => 'js-select-tags', :multiple => true } %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Сохранить', :class => 'btn btn-primary btn-sm' %>
    <%= link_to 'Отмена', :back, :class => 'btn btn-default btn-sm' %>
  </div>
<% end %>
